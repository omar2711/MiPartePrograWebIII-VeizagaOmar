@model Integrador.Models.Service

@{
    Layout = "_Layout";
    ViewData["Title"] = "Client Submit Service";
}
<div class="container-submit">
    <div class="dashboard-header clearfix">
        <div class="row">
            <div class="col-sm-12 col-md-6"><h4>Submit Service</h4></div>
        </div>
    </div>
    <div class="submit-address dashboard-list">
        <form method="post" action="Service/SubmitService" id="formulario">
        <h4 class="bg-grea-3">Basic Information</h4>
        <div class="row pad-20">
            <div class="row pad-2">
                
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label >Service Name</label>
                        <input  type="text" class="input-text" asp-for="serviceName" name="serviceName" placeholder="Service Name" minlength="3" maxlength="80" autofocus required>
                        <span asp-validation-for="serviceName" class="text-danger"></span>
                        
                    </div>
                </div>
                
                
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Description</label>
                         <input type="text" class="input-text"  asp-for="description" name="description"  placeholder="Description" minlength="3" maxlength="100" autofocus required>
                         <span asp-validation-for="description" class="text-danger"></span>
                         
                    </div>
                    <br />
                    <br />
                    
                </div>
                
                
                
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="input-text"  asp-for="price" name="price" placeholder="bs/$" min="1" max="100000" autofocus required >
                        <span asp-validation-for="price" class="text-danger"></span>
                        <p></p> 
                    </div>
                    <br />
                    <br />
                    
                </div>
             
                
                
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Categories</label>
                        <select class="selectpicker search-fields" asp-for="serviceType" name="serviceType" required>
                            <option>Magic</option>
                            <option>Kid Show</option>
                            <option>Music Show</option>
                            <option>Stand Up</option>
                        </select>
                        <span asp-validation-for="serviceType" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
          
        <h4 class="bg-grea-3">Property Gallery</h4>
        <div class="row pad-20">
            <div class="col-lg-12">
                <div id="myDropZone" class="dropzone dropzone-design">
                    <div class="dz-default dz-message"><span>Drop files here to upload</span></div>
                </div>
            </div>
        </div>
        <h4 class="bg-grea-3">Detailed Information</h4>
        <div class="row pad-20">
            <div class="col-lg-12">
                <textarea class="input-text" asp-for="descriptionDetails" name="descriptionDetails" placeholder="Detailed Information" title="please enter a  detailed description" required></textarea>
                <span asp-validation-for="descriptionDetails" class="text-danger"></span>
            </div>
        </div>
        
        <h4 class="bg-grea-3">Contact Details</h4>
        <div class="row pad-20">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="input-text" asp-for="email" name="email" placeholder="Email" title="please enter your email" required>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>Phone (optional)</label>
                    <input type="number" class="input-text"asp-for="contactService" name="contactService" placeholder="Phone"  title="please enter your phone" required >
                    <span asp-validation-for="contactService" class="text-danger"></span>
                </div>
            </div>
           <div class="form-group">
                <input type="submit" value="Submit Service" class="btn btn-primary"/>
            </div>
        </div>
        
    </form>
    <script src="~/js/form.js"></script>
    </div>
    

</div>