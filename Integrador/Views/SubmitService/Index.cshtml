@model Integrador.Models.Service



@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Submit Service";
}
<div class="dashboard-header clearfix">
    <div class="row">
        <div class="col-sm-12 col-md-6"><h4>Submit Service</h4></div>
        <div class="col-sm-12 col-md-6">
            <div class="breadcrumb-nav">
                <ul>
                    <li>
                        <a href="index.html">Index</a>
                    </li>
                    <li>
                        <a href="dashboard">Dashboard</a>
                    </li>
                    <li class="active">Submit Service</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="submit-address dashboard-list">
    <form method="post" action="Service/SubmitService">
        <h4 class="bg-grea-3">Basic Information</h4>
        <div class="search-contents-sidebar">
            <div class="row pad-2">
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label >Service Name</label>
                        <input  type="text" class="input-text" asp-for="serviceName" name="serviceName" placeholder="Service Name">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Description</label>
                         <input type="text" class="input-text"  asp-for="description" name="description" placeholder="Description">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" class="input-text"  asp-for="price" name="price" placeholder="Price $$">
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>Categories</label>
                        <select class="selectpicker search-fields" asp-for="serviceType" name="serviceType">
                            <option>Magic</option>
                            <option>Kid Show</option>
                            <option>Music Show</option>
                            <option>Stand Up</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="bg-grea-3">Property Gallery</h4>
        <div class="row pad-20">
            <div class="col-lg-12">
                <div id="myDropZone" class="dropzone dropzone-design">
                    <div class="dz-default dz-message"><span>Drop files here to upload</span></div>
                </div>
            </div>
        </div>
        <h4 class="bg-grea-3">Detailed Information</h4>
        <div class="row pad-20">
            <div class="col-lg-12">
                <textarea class="input-text" asp-for="descriptionDetails" name="descriptionDetails" placeholder="Detailed Information"></textarea>
            </div>
        </div>
        
        <h4 class="bg-grea-3">Contact Details</h4>
        <div class="row pad-20">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="input-text" asp-for="email" name="email" placeholder="Email">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>Phone (optional)</label>
                    <input type="text" class="input-text"asp-for="contactService" name="contactService" placeholder="Phone">
                    <span asp-validation-for="contactService" class="text-danger"></span>
                </div>
            </div>
           <div class="form-group">
                <input type="submit" value="SubmitService" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>