@model Integrador.Models.User;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Dashboard";
    ViewData["Title"] = "My Profile";
}
<div class="dashboard-header clearfix">
    <div class="row">
        <div class="col-sm-12 col-md-6"><h4>My Profile</h4></div>
        <div class="col-sm-12 col-md-6">
            <div class="breadcrumb-nav">
                <ul>
                    <li>
                        <a href="index.html">Index</a>
                    </li>
                    <li>
                        <a href="dashboard.html">Dashboard</a>
                    </li>
                    <li class="active">My Profile</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="dashboard-list">
    <h3 class="heading">Profile Details</h3>
    <div class="dashboard-message contact-2">
        <div class="row">
           
            <div class="col-lg-9 col-md-9">
                <form action="Register/UpdateClient" method="post" enctype="multipart/form-data">
                    <div>
                       
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                              
                                <label>Update your Username</label>
                                <input type="text" asp-for="UserName" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                <label>Update your Firstname</label>
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="Your Title">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                <label>Update your Lastname</label>
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Phone">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group message mb-0">
                                <label>Personal info</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="text" name="new-password" asp-for="Password" class="form-control" placeholder="New Password">
                                </div>
                            </div>
                            
                            <div class="col-lg-12">
                                <div class="send-btn">
                                    <button type="submit" class="btn btn-md button-theme">Update profile</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
